<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Notas.ViewModels"
             x:Class="Notas.Views.NotePage"
             Title="Ingresa una nota">


    <ContentPage.BindingContext>
        <viewModels:NoteViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="10" Margin="5">

        <Editor x:Name="TitleEditor"
                Placeholder="TÃ­tulo"
                FontSize="15"
                Text="{Binding Title}"
                Margin="30, 10, 25, 25"/>

        <Editor x:Name="TextEditor"
                Placeholder="Empieza a escribir"
                FontSize="15"
                Text="{Binding Text}"
                Margin="30, 50, 30, -1"
                HeightRequest="100" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="1" Margin="30">
            <Button Text="Agregar"
                    Command="{Binding JMSaveCommand}"/>

            <Button Grid.Column="1"
                    Text="Eliminar"
                    Command="{Binding JMDeleteCommand}"/>

        </Grid>
    </VerticalStackLayout>
</ContentPage>